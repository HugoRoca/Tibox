@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<button onclick="tibox.order.saveOrder();">Save Order</button>

<div class="form-horizontal">
    <div class="form-group">
        <label for="OrderDate" class="control-label col-md-2">Order Date</label>
        <div class="col-md-10">
            <input type="datetime" id="OrderDate" name="OrderDate" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="OrderNumber" class="control-label col-md-2">Order Number</label>
        <div class="col-md-10">
            <input type="text" id="OrderNumber" name="orderDate" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="CustomerId" class="control-label col-md-2">Customer</label>
        <div class="col-md-10">
            <select name="CustomerId" id="CustomerId" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label for="TotalAmount" class="control-label col-md-2">Total Amount</label>
        <div class="col-md-10">
            <input type="number" name="TotalAmount" id="TotalAmount" class="form-control" />
        </div>
    </div>
</div>

<div class="form-horizontal">
    <table id="orderItems" class="table table-responsive">
        <thead>
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select id="product" class="product form-control"></select>
                </td>
                <td>
                    <input type="number" id="unitPrice" class="unitPrice form-control" />
                </td>
                <td>
                    <input type="number" id="quantity" class="quantity form-control" />
                </td>
                <td>
                    <input type="button" id="addItemButton" class="btn btn-success btn-sm" value="Add" />
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="form-horizontal">
    <table id="orderItemList" class="table table-responsive"></table>
</div>
<script src="~/Scripts/app/order/order.js"></script>