<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tibox Angular</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/boostrap")
    @Scripts.Render("~/bundlee/bootstrapjs")    
</head>
<body ng-controller="applicationController as vm" ng-init="init('@System.Configuration.ConfigurationManager.AppSettings["webApiUrl"]')">    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ui-sref="home" ui-sref-active="active">Home</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a ui-sref="login" ui-sref-active="active" ng-bind="vm.texto"></a></li>           
                    <li><a ui-sref="product" ui-sref-active="active">Product</a></li>
                    <li><a ui-sref="supplier" ui-sref-active="active">Supplier</a></li>
                </ul>
            </div>
        </div>
    </div>
    <section>
        <div class="container body-content">
            @RenderBody()
        </div>
    </section>
    <footer>
        &copy; Todos los derechos reservados a Tibox
    </footer> 
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
</body>
</html>